<div class="row collapse animated fadeIn">
	<div class="large-7 small-7 columns">
		<h4>{{model.locality}}, {{model.administrative_area_level_1}} {{model.country}}</h4>
	</div>
</div>
<div class="row collapse animated fadeIn">
	<div class="large-4 medium-4 small-5 columns">
		{{input valueBinding="controller.locationSearch" placeholder="search city, zip or locality"}}
	</div>
	<div class="large-1 medium-1 small-1 columns">
		<button class="button tiny postfix" {{action "changeLocation"}}>Search</button>
	</div>
	<div class="large-2 medium-2 small-1 columns text-center">
		<h4 {{bind-attr class="loading::hide"}}>
			<small>loading</small>
			<img class="loading-header" src="assets/loading.gif"/>
		</h4>
	</div>
</div>
{{outlet}}